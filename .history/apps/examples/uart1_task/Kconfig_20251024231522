#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_UART_HELLO
	tristate "UART Hello World Example"
	default n
	---help---
		Enable the UART Hello World example for STM32F411-Minimum

if EXAMPLES_UART_HELLO

config EXAMPLES_UART_HELLO_PROGNAME
	string "Program name"
	default "uart_hello"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_UART_HELLO_PRIORITY
	int "UART Hello task priority"
	default 100

config EXAMPLES_UART_HELLO_STACKSIZE
	int "UART Hello stack size"
	default DEFAULT_TASK_STACKSIZE

endif