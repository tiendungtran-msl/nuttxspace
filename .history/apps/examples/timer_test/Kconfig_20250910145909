#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_TIMER_TEST
	tristate "Timer test example"
	default n
	depends on TIMER
	---help---
		Enable the timer example

if EXAMPLES_TIMER_TEST

config EXAMPLES_TIMER_TEST_STACKSIZE
	int "Timer test stack size"
	default DEFAULT_TASK_STACKSIZE
	---help---
		This is the stack size allocated when the timer task runs

config EXAMPLES_TIMER_TEST_PRIORITY
	int "Timer test task priority"
	default 100
	---help---
		This is the priority of the timer task

config EXAMPLES_TIMER_TEST_PROGNAME
	string "Timer test program name"
	default "timer_test"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

endif
